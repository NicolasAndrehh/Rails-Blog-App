<%= stylesheet_link_tag 'users_index' %>
<section class='users-section'>
<% @users.each do |user| %>
    <div class='user-container'>
        <%= image_tag(user.photo) %>
        <div class='user-info'>
            <h2 class='username'><%= user.name %></h2>
            <p class='number-of-posts'>Number of posts: <%= user.posts_counter %></p>
        </div>
    </div>
<% end %>
</section>